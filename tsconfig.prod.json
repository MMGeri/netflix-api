{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
    "compilerOptions": {
        "lib": [
            "ES2022"
        ],
        "module": "commonjs",
        "target": "es2022",
        "outDir": "./dist/src",
        "strict": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "node"
        ]
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/",
        "./dist/",
        "./tests"
    ]
}